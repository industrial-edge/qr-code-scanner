      "type": "string",
      "minLength": 1
    },
    "Password": {
      "title": "Password",
      "type": "string",
	  "minLength": 1
    },
    "Topic": {
      "title": "IE Databus topic",
	  "default": "ie/d/j/simatic/v1/s7c1/dp/w/PLC_S7",
      "type": "string",
	  "minLength": 1
    },
    "Variable": {
      "title": "PLC Varibale",
	  "default": "GDB_appSignals_APP_QRCode",
      "type": "string",
	  "minLength": 1
    },
    "Metadata": {
      "title": "Metadata",
	  "default": "ie/m/j/simatic/v1/s7c1/dp",
      "type": "string",
	  "minLength": 1
    },
    "Mqtt_Broker_Server": {
      "title": "MQTT Broker",
